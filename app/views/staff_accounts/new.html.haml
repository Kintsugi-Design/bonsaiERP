- content_for :links do
  %ul.breadcrumbs
    %li
      =link_to 'Cuentas personal', staff_accounts_path

%h1 Nueva cuenta personal


= simple_form_for(@staff_account, html: {id: 'cash-form'}) do |f|
  = bonsai_form_error(f)
  .row-fluid
    .span6
      = f.input :name, label: 'Name completo', input_html: { size: INPUT_SIZE }

    .span3
      = f.input :currency, label: 'Currency', collection: currency_options,
        hint: "<span class='icon-warning'></span> No es posible modificar despu√©s".html_safe
    .span3
      = f.input :amount, label: 'Total en cuenta', input_html: {size: 12, type: 'decimal'}

  .row-fluid
    .span3
      = f.input :phone, label: 'Phone'
    .span3
      = f.input :mobile, label: 'Mobile'
    .span6
      = f.input :email, label: 'Email', input_html: { size: INPUT_SIZE }

  .row-fluid
    .span6
      = f.input :address, label: 'Address', as: :text, input_html: { rows: 4, cols: INPUT_SIZE }

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary b'
