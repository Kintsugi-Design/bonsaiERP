- content_for :links do
  %ul.breadcrumbs.span6
    %li
      Editar datos
    %li
      %i.icon-caret-right
    %li #{link_to current_user, user_path(current_user)}

%h1 Edit Profile Data

= simple_form_for(current_user) do |f|
  .row-fluid
    .span6
      = f.input :email, label: 'Email', input_html: { size: INPUT_SIZE }
  .row-fluid
    .span6
      = f.input :first_name, label: 'First Name', input_html: { size: INPUT_SIZE }
    .span6
      = f.input :last_name, label: 'Last Name', input_html: { size: INPUT_SIZE }
  .row-fluid
    .span6
      = f.input :phone, label: 'Phone', input_html: { size: INPUT_SIZE }
    .span6
      = f.input :mobile, label: 'Mobile', input_html: { size: INPUT_SIZE }
  .row-fluid
    .span6
      = f.input :address, label: 'Address', as: :text, input_html: { rows: 4, cols: INPUT_SIZE }

  .form-actions
    = f.submit "Update Profile", class: 'btn btn-success b'
